    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // --- URLNI O'ZGARTIRING ---
        const API_URL = "SIZNING_WEB_APP_URL_MANZILINGIZ"; 
        // ---------------------------

        let CURRENT_USER = null;
        let CURRENT_FLOOR = 1;

        function toggleMenu() {
            document.getElementById('sidebar').classList.toggle('active');
            document.querySelector('.overlay').classList.toggle('active');
        }

        function handleLogin(e) {
            e.preventDefault();
            showLoader(true);
            const login = document.getElementById('loginId').value;
            const pass = document.getElementById('loginPass').value;
            fetch(API_URL, { method: "POST", body: JSON.stringify({ action: "login", login, password: pass }) })
            .then(res => res.json()).then(data => {
                showLoader(false);
                if(data.success) { CURRENT_USER = data; initDashboard(); } 
                else { document.getElementById('login-error').innerText = data.message; }
            });
        }

        function initDashboard() {
            document.getElementById('login-view').style.display = 'none';
            document.getElementById('dashboard-view').style.display = 'block';
            document.getElementById('user-name-display').innerText = CURRENT_USER.name;
            document.getElementById('user-role-display').innerText = CURRENT_USER.role === 'admin' ? 'Admin' : 'Talaba';
            if(CURRENT_USER.role === 'student') checkMyTicket();
            loadFloor(1);
        }

        function loadFloor(floor) {
            CURRENT_FLOOR = floor;
            showLoader(true);
            document.querySelectorAll('.floor-btn').forEach((btn, i) => btn.classList.toggle('active', i+1 === floor));
            fetch(API_URL, { method: "POST", body: JSON.stringify({ action: "getRooms", floor }) })
            .then(res => res.json()).then(data => { showLoader(false); renderRooms(data.rooms); });
        }

        function renderRooms(rooms) {
            const container = document.getElementById('rooms-container');
            container.innerHTML = '';
            rooms.forEach(room => {
                const isBusy = room.status === 'busy';
                const icon = isBusy ? 'fa-lock' : 'fa-door-open';
                // Desktop: col-lg-3 (4 ta), Mobile: col-6 (2 ta)
                container.innerHTML += `
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="room-card p-3 ${isBusy ? 'status-busy' : 'status-active'}" 
                             onclick="${isBusy ? '' : `openBooking('${room.number}')`}">
                            <div class="d-flex justify-content-between align-items-start">
                                <h3 class="mb-0 fw-bold">${room.number.split('-')[0]}</h3>
                                <i class="fas ${icon} opacity-50"></i>
                            </div>
                            <div class="mt-auto pt-2">
                                <small class="fw-bold" style="font-size:12px">${room.detail}</small>
                            </div>
                        </div>
                    </div>`;
            });
        }

        const bookModal = new bootstrap.Modal(document.getElementById('bookModal'));
        function openBooking(room) {
            if(CURRENT_USER.role === 'admin') return alert("Adminlar faqat kuzatadi.");
            document.getElementById('modalRoomName').innerText = room;
            document.getElementById('bookRoom').value = room;
            
            // Avtomatik bugungi sana
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('bookDate').min = today;
            document.getElementById('bookDate').value = today;
            
            bookModal.show();
        }

        function submitBooking(e) {
            e.preventDefault();
            bookModal.hide(); showLoader(true);
            fetch(API_URL, {
                method: "POST",
                body: JSON.stringify({
                    action: "bookRoom",
                    userId: document.getElementById('loginId').value,
                    username: CURRENT_USER.name,
                    role: CURRENT_USER.role,
                    room: document.getElementById('bookRoom').value,
                    date: document.getElementById('bookDate').value,
                    time: document.getElementById('bookTime').value,
                    duration: document.getElementById('bookDuration').value
                })
            }).then(res => res.json()).then(data => {
                showLoader(false);
                alert(data.message);
                if(data.success) { loadFloor(CURRENT_FLOOR); checkMyTicket(); }
            });
        }

        function checkMyTicket() {
            fetch(API_URL, { method: "POST", body: JSON.stringify({ action: "getMyBooking", userId: document.getElementById('loginId').value }) })
            .then(res => res.json()).then(data => {
                const ticket = document.getElementById('my-ticket');
                if(data.hasTicket) {
                    ticket.style.display = 'block';
                    document.getElementById('ticket-room').innerText = data.room;
                    document.getElementById('ticket-time').innerText = data.time;
                } else { ticket.style.display = 'none'; }
            });
        }

        function cancelMyBooking() {
            if(!confirm("Rostdan ham bronni bekor qilasizmi?")) return;
            showLoader(true);
            fetch(API_URL, { method: "POST", body: JSON.stringify({ action: "cancelBooking", userId: document.getElementById('loginId').value }) })
            .then(res => res.json()).then(data => {
                showLoader(false);
                alert(data.message);
                if(data.success) { checkMyTicket(); loadFloor(CURRENT_FLOOR); }
            });
        }

        function showLoader(show) { document.getElementById('loader').style.display = show ? 'flex' : 'none'; }
    </script>
</body>
</html>
