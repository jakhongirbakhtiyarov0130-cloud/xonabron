                    <label class="form-label small fw-bold">PAROL</label>
                    <input type="password" class="form-control" id="loginPass" required>
                </div>
                <button class="btn btn-primary w-100 py-2 fw-bold">KIRISH</button>
            </form>
            <div id="login-error" class="text-danger mt-3 small fw-bold"></div>
        </div>
    </div>

    <div id="dashboard-view" style="display: none;">
        
